{% extends 'base.html.twig' %}

{% block body %}
    <h1>Donation list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Paypaltransactionid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td><a href="{{ path('donation_show', { 'id': donation.id }) }}">{{ donation.id }}</a></td>
                <td>{{ donation.amount }}</td>
                <td>{{ donation.paypalTransactionId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('donation_show', { 'id': donation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('donation_edit', { 'id': donation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('donation_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
