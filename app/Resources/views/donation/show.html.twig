{% extends 'base.html.twig' %}

{% block body %}
    <h1>Donation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ donation.amount }}</td>
            </tr>
            <tr>
                <th>Paypaltransactionid</th>
                <td>{{ donation.paypalTransactionId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('donation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('donation_edit', { 'id': donation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
